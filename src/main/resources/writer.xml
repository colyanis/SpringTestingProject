<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byType">


    <bean id="logger" class="com.mykola.spring.writer.Logger">
    </bean>

    <bean id="consoleWriter" class="com.mykola.spring.writer.ConsoleWriter"
            primary="true">
    </bean>


    <bean id="fileWriter" class="com.mykola.spring.writer.FileWriter">
    </bean>

    <bean id="fileWriter2" class="com.mykola.spring.writer.FileWriter"
          autowire-candidate="false">
    </bean>

</beans>