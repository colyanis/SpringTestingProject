<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jungle" class="com.mykola.spring.jungles.Jungle">
        <property name="animals">
            <map>
                <entry key="lion" value-ref="lion"></entry>
            </map>
        </property>
    </bean>

    <bean id="elephant" class="com.mykola.spring.jungles.Animal">
        <property name="name" value="Jumbo"></property>
        <property name="type" value="elephant"></property>
    </bean>
    <bean id="lion" class="com.mykola.spring.jungles.Animal">
        <property name="name" value="Mufasa"></property>
        <property name="type" value="lion"></property>
    </bean>
    <bean id="snake" class="com.mykola.spring.jungles.Animal">
        <property name="name" value="Olenka"></property>
        <property name="type" value="snake"></property>
    </bean>

</beans>